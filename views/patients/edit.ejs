<% include ../partials/header %>
    
    <div class="container-fluid">
        <form action="/patients/<%= patient._id %>?_method=PUT" method="POST">
            <div class="form-group">
                
                <label>Imię pacjenta:</label>
            <input class="form-control" type="text" name="patient[firstname]" value="<%= patient.firstname %>">
            <label>Nazwisko pacjenta:</label>
            <input class="form-control" type="text" name="patient[lastname]"  value="<%= patient.lastname %>">
            <label>PESEL:</label>
            <input class="form-control" type="text" name="patient[pesel]"  value="<%= patient.pesel %>">
            <label>Nr kontaktowy telefonu:</label>
            <input class="form-control" type="text" name="patient[phone]"  value="<%= patient.phone %>">
            </div>
            <div class="form-group">
            <label>Numer ubezpieczenia:</label>
            <input class="form-control" type="text" name="patient[securitynr]"  value="<%= patient.securitynr %>">
            <label>Data wydania ubezpieczenia:</label>
            <input class="form-control" type="text" name="patient[securitydate]"  value="<%= patient.securitydate %>">
            <label>Nazwa ubezpieczyciela:</label>
            <select class="form-control">
                <option selected>Zaznaczono: <%= patient.securityinstance %></option>
                <option>ZUS</option>
                <option>MSWiA</option>
                <option>KRUS</option>
            </select>
            </div>
              <label><h3>Adresy pacjenta:</h3></label>
           
            <% include ../partials/address/address-header %>
                   <% if(patient.addresses ===null || patient.addresses === undefined || patient.addresses.length ===0){%>
                   <tr>
                       <th>Brak adresu...</th>
                   </tr>
                   <% }else{%>
                    <% patient.addresses.forEach(function(address){ %>
                    <tr>
                        <th scope="row"><%=patient.addresses.indexOf(address)%></th>
                        <th><%=address.streetname%></th>
                        <th><%=address.nrblock%></th>
                        <th><%=address.nrflat%></th>
                        <th><%=address.zipcode%></th>
                        <th><%=address.town%></th>
                        
                    </tr>
                    <% })%>
                 <% } %>
                    <% include ../partials/address/address-footer%>
          <button class="btn btn-primary">Zatwierdź zmiany</button>
        </form>
        
    </div>

<% include ../partials/footer %>