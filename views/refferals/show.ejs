             <input type="submit" class="btn btn-xs btn-danger" value="UsuÅ„ skierowanie">
        </form>
    <div class="container">    
        <a class="btn btn-xs btn-success" href="/refferals/<%= refferal._id %>/appointments/new">Nowa wizyta lekarza rehabilitacji</a>
            <% refferal.appointments.forEach(function(appointment){%>
                <h4>Data wizyty: </h4><%= appointment.appointmentdate%>
                <br>
                <h4>Stan pacjenta: </h4><%= appointment.state%>
                <br>
                <h4>Nadzorca: </h4><%= appointment.supervisor.lastname %> <%= appointment.supervisor.firstname %> - <%= appointment.supervisor.nrpwz %>
                <br>
                <h4>Fizjoterapeuta: </h4><%= appointment.physiotherapist %>
                <br>
                <h4>Termin realizacji: </h4><%= appointment.month %> <%= appointment.year%>
                <br>
                <h4>Kolejka: </h4><%= appointment.queue%>
                <br>
                <h4>Choroby pacjenta: </h4>
                <% appointment.diseases.forEach(function(disease){ %>
                    <li><%= disease.code%> - <%= disease.name%></li>
                <% }) %>
            <% }) %>
    </div>
</div>
        
   

